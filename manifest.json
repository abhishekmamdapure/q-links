{
  "manifest_version": 3,
  "name": "Q-Links",
  "version": "2.0",
  "description": "Premium Quick Access & Copy for Your Social Media Profiles.",
  "icons": {
    "16":  "icons/main/16.png",
    "32":  "icons/main/32.png",
    "48":  "icons/main/48.png",
    "128": "icons/main/128.png"
  },
  "action": {
    "default_title": "Q-Links",
    "default_icon": {
      "16":  "icons/main/16.png",
      "32":  "icons/main/32.png",
      "48":  "icons/main/48.png",
      "128": "icons/main/128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.stripe.com/*"
  ]
}
